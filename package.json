{
  "name": "talent-setu",
  "private": true,
  "version": "0.1.0",
  "description": "Talent Setu monorepo combining learning, assessment, recruitment, and admin platforms",
  "scripts": {
  "install:all": "npm install --workspaces --include-workspace-root=false",
  "build": "echo 'root build placeholder'",
    "dev:api": "npm --workspace=@talent-setu/api run dev",
    "dev:ai": "npm --workspace=@talent-setu/ai-service run dev",
    "dev:judge": "npm --workspace=@talent-setu/judge-service run dev",
    "dev:admin": "PORT=5173 npm --workspace=admin run dev",
    "dev:assessment": "PORT=5174 npm --workspace=assessment run dev",
    "dev:learning": "PORT=3000 npm --workspace=learning run dev",
    "dev:recruitment": "PORT=3001 npm --workspace=recruitment run dev",
    "dev:frontend": "npx concurrently -n ADMIN,ASSESS,LEARN,RECRUIT -c yellow,cyan,white,red \"PORT=5173 npm run dev:admin\" \"PORT=5174 npm run dev:assessment\" \"PORT=3000 npm run dev:learning\" \"PORT=3001 npm run dev:recruitment\"",
    "dev:all": "npx concurrently -n API,AI,JUDGE,ADMIN,ASSESS,LEARN,RECRUIT -c blue,green,magenta,yellow,cyan,white,red \"PORT=4001 npm run dev:api\" \"PORT=4101 npm run dev:ai\" \"PORT=4201 npm run dev:judge\" \"PORT=5173 npm run dev:admin\" \"PORT=5174 npm run dev:assessment\" \"PORT=3000 npm run dev:learning\" \"PORT=3001 npm run dev:recruitment\"",
    "test:auth-flow": "node scripts/auth-test.js",
    "build:api": "npm --workspace=@talent-setu/api run build",
    "build:ai": "npm --workspace=@talent-setu/ai-service run build",
    "build:judge": "npm --workspace=@talent-setu/judge-service run build",
    "build:all": "npm --workspaces run build",
    "start:api": "npm --workspace=@talent-setu/api run start",
    "start:ai": "npm --workspace=@talent-setu/ai-service run start",
    "start:judge": "npm --workspace=@talent-setu/judge-service run start",
    "start:admin": "npm --workspace=admin run preview",
    "start:assessment": "npm --workspace=assessment run preview",
    "start:learning": "npm --workspace=learning run start",
    "start:recruitment": "npm --workspace=recruitment run start",
    "start:all": "npx concurrently -n API,AI,JUDGE,ADMIN,ASSESS,LEARN,RECRUIT -c blue,green,magenta,yellow,cyan,white,red \"npm run start:api\" \"npm run start:ai\" \"npm run start:judge\" \"npm run start:admin\" \"npm run start:assessment\" \"npm run start:learning\" \"npm run start:recruitment\"",
    "lint:api": "npm --workspace=@talent-setu/api run lint",
    "lint:ai": "npm --workspace=@talent-setu/ai-service run lint",
    "lint:judge": "npm --workspace=@talent-setu/judge-service run lint",
    "seed:api": "npm run seed --workspace backend/api"
  },
  "workspaces": [
    "backend/api",
    "backend/ai-service",
    "backend/judge-service",
    "frontend/admin",
    "frontend/assessment",
    "frontend/learning",
    "frontend/recruitment",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "9.2.1",
  "semantic-release": "^21.0.0",
    "@semantic-release/commit-analyzer": "^10.0.0",
    "@semantic-release/release-notes-generator": "^10.0.0",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/github": "^9.0.0"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  }
}
